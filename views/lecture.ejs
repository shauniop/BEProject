<% include headerAndSide.ejs %>
<!DOCTYPE html>
<html>
<head>
    <title>Contact form using Bootstrap 3.3.4</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    <meta charset="utf-8">
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <link rel="stylesheet" href="/vendor/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/sb-admin.css">
</head>
<body style="background-color: #7e7e7e">
	<div class="content-wrapper">

      <div class="container-fluid">

        <!-- Breadcrumbs -->
        <ol class="breadcrumb">
          <li class="breadcrumb-item">
            <a href="/">Dashboard</a>
          </li>
	  <li class="breadcrumb-item">
            <a href="/plans">Plans</a>
          </li>
          <li class="breadcrumb-item active">Lab</li>
        </ol>


     <div class="well" style="margin-top: 5%;">
     <h3>Lab</h3>
     <form role="form" id="contactForm" data-toggle="validator" class="shake" method="post" action="/virtualPage3">
             


     <div class="form-group">
           <br>
           Sr. Number
            <input type="number" id="num" class="form-control"  name="num" required ></input>
            <div class="help-block with-errors"></div>
        </div> 


       <div class="form-group">
           <br>
           Portion to be covered
            <textarea id="portion" class="form-control" rows="4" placeholder="Enter the Portion" name="portion" required ></textarea>
            <div class="help-block with-errors"></div>
        </div> 
     

    
<div class="container">
  Date
  <div class="row">
    <table class="table">
      <thead>
        <tr>


          <th>Planned Date</th>
          <th>Actual Date</th>
          
          
        </tr>
      </thead>
      <tbody>
        <tr>
          

          <td>
            <input type="date" class="form-control" size="16" name="planned" value="">
          </td>
          <td>
            <input type="date" class="form-control" size="16" name="actual" value="">
          </td>

        </tr>
      </tbody>
    </table>
  </div>
</div>



        


        <div class="form-group">
           <br>
           Content Delivery method
            <textarea id="method" class="form-control" rows="4" placeholder="Enter the Content Delivery method" name="method" required ></textarea>
            <div class="help-block with-errors"></div>
        </div> 



        <br>
        <button name="submit" type="submit" id="form-submit" class="btn btn-success btn-md pull-right ">Submit</button>
        <div id="msgSubmit" class="h3 text-center hidden"></div>
        <div class="clearfix"></div>
    </form>
    <hr>
    <br><br>

<div >
  <h3>Lab</h3>        
  <table class="table table-striped table-hover table-bordered">
    <thead>
      <tr>
	<th>Sr. Number </th>
	<th>Portion to be covered</th>
  <th>Planned Date</th>
  <th>Actual Date</th>
  <th>Content Delivery method</th>
  
      </tr>
    </thead> 
    <tbody>
    	<% obj.forEach(function(row,index){%>
      <tr>
	<td><%= row.num %> </td>
	<td><%= row.portion %> </td>
	<td><%= row.planned %> </td>
  <td><%= row.actual %> </td>
  <td><%= row.method %> </td>
 
      </tr>
      <% }); %>
    </tbody>
  </table>


</div>
</div>
</div>



</body>
</html>



