<% include headerAndSide.ejs %>
<!DOCTYPE html>
<html>
<head>
    <title>Contact form using Bootstrap 3.3.4</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    <meta charset="utf-8">
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <link rel="stylesheet" href="/vendor/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/sb-admin.css">
</head>
<body style="background-color: #7e7e7e">
	<div class="content-wrapper">

      <div class="container-fluid">

        <!-- Breadcrumbs -->
        <ol class="breadcrumb">
          <li class="breadcrumb-item">
            <a href="/">Dashboard</a>
          </li>
	  <li class="breadcrumb-item">
            <a href="/plans">Plans</a>
          </li>
          <li class="breadcrumb-item active">Lecture Schedule</li>
        </ol>

	

      <div class="well" style="margin-top: 5%;">
     <h3>Lecture Schedule</h3>
      <form role="form" id="contactForm" data-toggle="validator" class="shake" method="post" action="/virtualPage3">
        <div class="form-group">
           <br>
           Portion to be covered
            <textarea id="message" class="form-control" rows="4" placeholder="Enter your message" name="portion" required ></textarea>
            <div class="help-block with-errors"></div>
        </div>      


        <div class="form-group">
           <br>
            Example to teach
            <textarea id="message" class="form-control" rows="4" placeholder="Enter your message" name="example" required ></textarea>
            <div class="help-block with-errors"></div>
        </div>

        <div class="form-group">
           <br>
           Planned date
            <div class="form-group">
                <div class='input-group date' id='datetimepicker5'>
                    <input type='date' class="form-control" name="pdate" />
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>
            </div>
            <div class="help-block with-errors"></div>
        </div>
   

        <div class="form-group">
           <br>
           Actual date
              <div class="form-group">
                <div class='input-group date' id='datetimepicker5'>
                    <input type='date' class="form-control" name="adate"/>
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>
            </div>

            
        </div>


        <div class="form-group">
           <br>
           <h4>Content delivery method</h4>
            <textarea id="message" class="form-control" rows="2" placeholder="Enter your message" name="delivery" required ></textarea>
            <div class="help-block with-errors"></div>
        </div>

        <br>
        <button name="submit" type="submit" id="form-submit" class="btn btn-success btn-md pull-right ">Submit</button>
        <div id="msgSubmit" class="h3 text-center hidden"></div>
        <div class="clearfix"></div>
    </form>
    <hr>
    <br><br>

<div >
  <h3>Lecture Schedule</h3>        
  <table class="table table-striped table-hover table-bordered">
    <thead>
      <tr>
	<th>ID</th>
	<th>Portion</th>
        <th>Example</th>
        <th>Planned Date</th>
        <th>Actual Date</th>
	<th>Delivery Method<th>
        
      </tr>
    </thead> 
    <tbody>
    	<% obj.forEach(function(row,index){%>
      <tr>
	<td><%= row.lecID %> </td>
	<td><%= row.portion %> </td>
        <td><%= row.eg %> </td>
	<td><%= row.plannedDate %> </td>
	<td><%= row.actualDate %> </td>
        <td><%= row.delivery %> </td>
      </tr>
      <% }); %>
    </tbody>
  </table>
</div>

</div>
</div>



</body>
</html>
