<% include headerAndSide.ejs %>

<!DOCTYPE html>
<html>
<head>
    <title>Contact form using Bootstrap 3.3.4</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    <meta charset="utf-8">
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <link rel="stylesheet" href="/vendor/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/sb-admin.css">
</head>
<body style="background-color: #7e7e7e">
	<div class="content-wrapper">

      <div class="container-fluid">

        <!-- Breadcrumbs -->
        <ol class="breadcrumb">
          <li class="breadcrumb-item">
            <a href="/">Dashboard</a>
          </li>
	   <li class="breadcrumb-item">
            <a href="/syllabus">Syllabus</a>
          </li>
          <li class="breadcrumb-item active">Modules</li>
        </ol>

        <div class="col-sm-12 col-sm-offset-3">


    <div class="well" style="margin-top: 5%;">
    <h3>Modules</h3>
    <form role="form" id="contactForm123" data-toggle="validator" class="shake" method="post" action="/virtualPage">
       

	<div class="form-group">
	   <br>
	   Course ID
	   <input type="text" class="form-control" name="courseID" placeholder="Course ID">
	</div>	

	<div class="form-group">
	   <br>
	   Module ID
	   <input type="text" class="form-control" name="moduleID" placeholder="Module No.">
	</div>	
	
	<div class="form-group">
	   <br>
	   Module Name
	   <input type="text" class="form-control" name="modulename" placeholder="Module Name">
	</div>

	<div class="form-group">
           <br>
	    Module Content
            <textarea id="message123" class="form-control" rows="5" placeholder="Enter the content" name="content" ></textarea>
            <div class="help-block with-errors"></div>
        </div>

	<div class="form-group">
	   <br>
	    Hours
	   <input type="text" class="form-control" name="hours" placeholder="Hours">
	</div>

		
	
	<br>
        <button name="submit" type="submit" id="form-submit" class="btn btn-success btn-md pull-right ">Submit</button>
        <div id="msgSubmit" class="h3 text-center hidden"></div>
        <div class="clearfix"></div>
    </form>
    </div>
    <br><br>



    <!-- Displaying Data from Database Objectives-->

<div >
  <h3>Modules</h3>        
  <table class="table table-striped table-hover table-bordered">
    <thead>
      <tr>
	<th>Course ID</th>
	<th>Module No.</th>
        <th>Module Name</th>
        <th>Module Content</th>
        <th>Hours</th>
        
      </tr>
    </thead> 
    <tbody>
    	<% obj.forEach(function(row,index){%>
      <tr>
	<td><%= row.courseID %> </td>
	<td><%= row.moduleID %> </td>
	 <td><%= row.moduleName %> </td>
        <td><%= row.content %> </td>
	<td><%= row.hours %> </td>
	
        
      </tr>
      <% }); %>
    </tbody>
  </table>
</div>


</body>
</html>



